
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng Ký Thành Viên</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>

    <div class="container mt-5">
        <h2 class="text-center mb-4">ĐĂNG KÝ THÀNH VIÊN</h2>
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card p-4 shadow-sm">
                    <div class="card-body">
                        <table class="table">
                            @using (Html.BeginForm())
                            {
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <tr>
                                    <td class="text-end fw-bold">Họ Tên KH:</td>
                                    <td>@Html.TextBox("HotenKH", "", new { @class = "form-control" }) @ViewData["Loi1"]</td>
                                </tr>
                                <tr>
                                    <td class="text-end fw-bold">Tên Đăng nhập:</td>
                                    <td>@Html.TextBox("TenDN", "", new { @class = "form-control" }) @ViewData["Loi2"]</td>
                                </tr>
                                <tr>
                                    <td class="text-end fw-bold">Mật Khẩu:</td>
                                    <td>@Html.Password("Matkhau", "", new { @class = "form-control" }) @ViewData["Loi3"]</td>
                                </tr>
                                <tr>
                                    <td class="text-end fw-bold">Nhập lại Mật khẩu:</td>
                                    <td>@Html.Password("ReMatkhau", "", new { @class = "form-control" }) @ViewData["Loi4"]</td>
                                </tr>
                                <tr>
                                    <td class="text-end fw-bold">Điện thoại:</td>
                                    <td>@Html.TextBox("Dienthoai", "", new { @class = "form-control" }) @ViewData["Loi5"]</td>
                                </tr>
                                <tr>
                                    <td class="text-end fw-bold">Ngày sinh:</td>
                                    <td><input type="date" name="NgaySinh" class="form-control" /></td>
                                </tr>
                                <tr>
                                    <td class="text-end fw-bold">Email:</td>
                                    <td><input type="text" name="Email" class="form-control" /></td>
                                </tr>
                                <tr>
                                    <td class="text-end fw-bold">Địa Chỉ:</td>
                                    <td><input type="text" name="Diachi" class="form-control" /></td>
                                </tr>
                                <tr>
                                    <td colspan="2" class="text-center">
                                        <button type="submit" class="btn btn-primary">ĐĂNG KÝ</button>
                                    </td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JavaScript and dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>



